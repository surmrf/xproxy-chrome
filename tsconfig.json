{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "lib",
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "baseUrl": "src",
    "lib": [
      "dom",
      "es7"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
  ]
}
